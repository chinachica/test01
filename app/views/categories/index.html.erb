<h2>カテゴリ一覧</h2>

<table>
  <tr>
    <th>カテゴリ名</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>

  <tr>
    <td><%= category.name %></td>
    <td><%= link_to t('link.Show'), category %></td>
    <td><%= link_to t('link.Edit'), edit_category_path(category) %></td>
    <td><%= link_to t('link.Destroy'), category, method: :delete, data: { confirm: '削除してよろしいですか？' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('link.NewCategory'), new_category_path %>


